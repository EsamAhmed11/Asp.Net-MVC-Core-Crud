@using Task_1._0.ViewModel
@model ProductVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Product</h1>

<form asp-action="Create">
    <div class="form-group">
    <label asp-for="ProductName" ></label>
    <input asp-for="ProductName" class="form-control"  placeholder="Phone,Labtops,...">
    <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group">
    <label asp-for="QuantityPerUnit" ></label><br />
    <select  name="QuantityPerUnit">
    <option  selected>Choose...</option>
    <option value="Kilo">Kilo</option>
    <option value="box">box</option>
    <option value="can">can</option>
    <option value="liter">liter</option>
    <option value="bottle">bottle</option>
    </select>   
    <span class="text-danger" asp-validation-for="QuantityPerUnit"></span>
    </div>

    <div class="form-group">
    <label asp-for="ReorderLevel" ></label>
    <input  asp-for="ReorderLevel" class="form-control">
    <span class="text-danger" asp-validation-for="ReorderLevel"></span>
    </div>

    <div class="form-group">
    <label asp-for="UnitPrice" ></label>
    <input  asp-for="UnitPrice" type="number" class="form-control"  >
    <span class="text-danger" asp-validation-for="UnitPrice"></span>
    </div>

    <div class="form-group">
    <label asp-for="UnitsInStock" ></label>
    <input  asp-for="UnitsInStock" class="form-control"  >
    <span class="text-danger" asp-validation-for="UnitsInStock"></span>
    </div>

     <div class="form-group">
    <label asp-for="UnitsOnOrder" ></label>
    <input  asp-for="UnitsOnOrder"  class="form-control"  >
    <span class="text-danger" asp-validation-for="UnitsOnOrder"></span>
    </div>

    <div class="form-group">
    <label asp-for="SupplierID" ></label><br />
    <select asp-items="@ViewBag.supplier" asp-for="SupplierID">
        <option selected value="Select-Supplier">Select-Supplier</option>
    </select>
    <span class="text-danger" asp-validation-for="SupplierID"></span>
    </div>

    <div class="form-group">
       <input  type="submit" class="btn btn-primary" />
       <a href="/Product/ShowAll" class="btn btn-info">Back To Show Products </a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}